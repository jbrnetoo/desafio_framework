@model PortalComercio.Models.DtoFruta
@{
    ViewData["Title"] = "Excluir - " + Model.Nome;
}

<h4 style="padding-top: 50px">@ViewData["Title"]</h4>

<h5>Tem certeza que irá deletar este item?</h5>

<div class="row">
    <div class="col-md-4">
        <img src="~/imagens/@Model.Imagem" alt="@Model.Imagem" style="width: 120px; height: 120px" />
    </div>
    <div class="col-md-6">
        <dl>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Descricao)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Descricao)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Valor)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Valor)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Quantidade)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Quantidade)
            </dd>
        </dl>

        <div style="margin-left:15px;margin-top:20px;">
            <form asp-action="DeleteConfirmed">
                <input type="hidden" asp-for="@Model.Id" />
                <input type="submit" value="Excluir" class="btn btn-danger" />
                <a class="btn btn-info" href="javascript:window.history.back();">Voltar</a>
            </form>
        </div>

    </div>
</div>
